                                </StackPanel>
                            </ListBoxItem>

                            <ListBoxItem Name="Frozen">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
