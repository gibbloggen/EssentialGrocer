<Page
    x:Class="EssentialGrocer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EssentialGrocer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:EssentialGrocer.Model"
    mc:Ignorable="d"

    >

    <Page.Resources>
        <DataTemplate x:Key="GroceryListDataTemplate" x:DataType="data:Grocery">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="{x:Bind  Description}" HorizontalAlignment="Left" FontSize="22" />
            </StackPanel>
        </DataTemplate>
        
       

       
    </Page.Resources>
    <!-- x:DataType="data:Grocery"-->
    <Grid  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="Auto" Width="Auto" Name="Gridder">

        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"  />
            <RowDefinition Height="*"   />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="*" />


        </Grid.ColumnDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="Phone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                        <!-- DisplayMode="CompactOverlay"-->
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.DisplayMode" Value="CompactOverlay" />
                        <Setter Target="CategorySplitView.DisplayMode" Value="CompactOverlay" />
                        <Setter Target="MySplitView.IsPaneOpen" Value="false" />
                        <Setter Target="CategorySplitView.IsPaneOpen" Value="false" />
                        <Setter Target="Gridder.Background" Value="Blue" />
                      
                        <!--<Setter Target = "NeedItHeader.(Grid.ColumneSpan)" Value="1" />-->
                        <Setter Target = "NeedItHeader.HorizontalAlignment" Value="Center" />
                        <Setter Target="NeedItHeader.Margin" Value="23,0,20,32" />

                    </VisualState.Setters>

                </VisualState>
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.DisplayMode" Value="Inline" />
                
                        <Setter Target="MySplitView.IsPaneOpen" Value="true" />
                        
                        <Setter Target="Gridder.Background" Value="Red" />
                       <!-- <Setter Target = "NeedItHeader.(Grid.ColumnSpan)" Value="1" />-->
                        <Setter Target = "NeedItHeader.HorizontalAlignment" Value="Left" />
                        <Setter Target="NeedItHeader.Margin" Value="67,0,20,32" />

                    </VisualState.Setters>


                </VisualState>
            </VisualStateGroup>


        </VisualStateManager.VisualStateGroups>


        <RelativePanel Grid.Row="0" Grid.ColumnSpan="2"  Background="Aquamarine" >
            <Button Name="HamburgerButton" 
                    RelativePanel.AlignLeftWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36" 
                    Content="&#xE700;" 
                    Click="HamburgerButton_Click"
                    />

            <TextBlock Grid.Column="0"
                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                   Text="Essential Grocer" FontSize="32" />

            <Button Name="CategoryButton" 
                    RelativePanel.AlignRightWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36" 
                    Content="&#xE700;" 
                    Click="CategoryButton_Click"
                    />

        </RelativePanel>

        <SplitView Grid.Row="1" 
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   
                   Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   
                   CompactPaneLength="0"
                   >
            <SplitView.Pane>
                <ListBox SelectionMode="Single" 
                         Tapped="ListBox_Tapped"   >

                    <ListBoxItem Name="NewList">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE80F;" />
                            <TextBlock FontSize="24" Margin="20,0,0,0">New</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="OpenList">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                            <TextBlock FontSize="24" Margin="20,0,0,0">Open</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="SaveList">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                            <TextBlock FontSize="24" Margin="20,0,0,0">Save</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="EmailList">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                            <TextBlock FontSize="24" Margin="20,0,0,0">Email</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="PrintList">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                            <TextBlock FontSize="24" Margin="20,0,0,0">Print</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content >

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="AUTO"  />
                        <RowDefinition Height="*"   />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*"/>

                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Row="0"    Grid.Column="0"  Grid.RowSpan="1" Fill="Coral" Grid.ColumnSpan="1" Margin="0,0,0,32" />

                    <Rectangle Grid.Row="0"    Grid.ColumnSpan="1"  Grid.Column="1"  Grid.RowSpan="1" Fill="DarkCyan" Margin="0,0,0,32" />



                    <TextBlock  Grid.Column="0" Grid.Row="0"
                   Style="{StaticResource    TitleTextBlockStyle }"
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Grid.ColumnSpan="1" Margin="23,0,23,32"> 
            To Get At Store

                    </TextBlock>
                    <TextBlock Grid.Column="1" Grid.Row="0" Name="NeedItHeader"
                   Style="{StaticResource TitleTextBlockStyle}"
                   VerticalAlignment="Center"
                   Grid.ColumnSpan="1" >
            Do We Need it?

                    </TextBlock>
                    <Grid Grid.Column="0" Grid.ColumnSpan="1" Margin="0,32,0,0" Grid.RowSpan="2">
                        <ListView ItemsSource="{x:Bind GroceriesToGet, Mode=OneWay}"
                   Name="GroceryStoreToGetList"
                  ItemClick="GroceryStoreToGetList_ItemClick"
                  IsItemClickEnabled="True" 
                  ItemTemplate="{StaticResource GroceryListDataTemplate}">
                        </ListView>
                    </Grid>

                    <Grid Grid.Column="1" Margin="0,32,0,0" Grid.ColumnSpan="1"  Grid.RowSpan="2">
                        <ListView ItemsSource="{x:Bind Groceries,Mode=OneWay}" 
                  Name="GroceryStore"
                  ItemClick="GroceryStore_ItemClick"
                  IsItemClickEnabled="True" 
                  ItemTemplate="{StaticResource GroceryListDataTemplate}">
                        </ListView>
                    </Grid>
                    <ListBox Name = "MyRightMenuSorta" SelectionMode="Single" 
                         Tapped="CategoryListBox_Tapped" Grid.Column="2" Grid.Row="1" Visibility="Collapsed">

                        <ListBoxItem Name="Bakery">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                                <TextBlock FontSize="24" Margin="20,0,0,0">Bakery</TextBlock>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Name="Beverages">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                                <TextBlock FontSize="24" Margin="20,0,0,0">Beverages</TextBlock>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Name="Cheese">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                                <TextBlock FontSize="24" Margin="20,0,0,0">Cheese</TextBlock>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Name="Dairy">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                                <TextBlock FontSize="24" Margin="20,0,0,0">Dairy</TextBlock>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Name="Deli">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                                <TextBlock FontSize="24" Margin="20,0,0,0">Deli</TextBlock>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Name="Fish">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                                <TextBlock FontSize="24" Margin="20,0,0,0">Fish</TextBlock>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Name="Meat">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                                <TextBlock FontSize="24" Margin="20,0,0,0">Meat</TextBlock>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Name="Produce">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE1CE;" />
                                <TextBlock FontSize="24" Margin="20,0,0,0">Produce</TextBlock>
                            </StackPanel>
                        </ListBoxItem>

                    </ListBox>


                </Grid>
               
            </SplitView.Content>

        </SplitView>

